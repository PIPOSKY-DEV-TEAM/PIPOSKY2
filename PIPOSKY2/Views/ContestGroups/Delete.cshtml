@using PIPOSKY2.Models

@{
    ViewBag.Title = "删除课程";
}

<h2>删除课程</h2>
@using (Html.BeginForm("Delete", "ContestGroups", FormMethod.Post, new { role = "form" }))
{
    <table class="table table-striped">
        <tr>
            <th>课程ID</th>
            <th>课程名称</th>
            <th>删除课程</th>
        </tr>
        @{
    PIPOSKY2DbContext db = new PIPOSKY2DbContext();
    foreach (var i in db.ContestGroups)
    {
            <tr>
                <td>@i.ContestGroupID</td>
                <td>@i.ContestGroupName</td>
                <td>
                    <input type="checkbox" name="@i.ContestGroupID" /></td>
            </tr>
    }
        }
    </table>
    <button type="submit" class="btn btn-default">确定</button>
}