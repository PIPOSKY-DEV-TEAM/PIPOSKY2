@{
    ViewBag.Title = "比赛";
}

@using PIPOSKY2.Models;
@model IEnumerable<Contest>

<h2>比赛</h2>
@{
    User tmp = Session["User"] as User;
    if (tmp != null)
    {
        if ((tmp.UserType == "admin") || (tmp.UserType == "editor"))
        {
<p>
    @Html.ActionLink("添加比赛", "Add", "Contests", new { @class="btn btn-default" })
    @Html.ActionLink("删除比赛", "Delete", "Contests", new { @class="btn btn-default" })
</p>
        }
    }
}
<table class="table">
    <tr>
        <th>比赛ID</th>
        <th>比赛名称</th>
        <th>开始时间</th>
        <th>结束时间</th>
    </tr>
    @foreach (Contest i in Model)
    {
        <tr>
            <td>@i.ContestID</td>
            <td>@Html.ActionLink(@i.ContestName, "Index", "Contest", new { id = @i.ContestID }, null)</td>
            <td>@i.StartTime</td>
            <td>@i.EndTime</td>
        </tr>
    }
</table>