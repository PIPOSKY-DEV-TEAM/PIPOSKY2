@using PIPOSKY2.Models

@{
    ViewBag.Title = "删除课程";
}

<h2>删除课程</h2>
@using (Html.BeginForm("Delete", "Courses", FormMethod.Post, new { role = "form" }))
{
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>课程名称</th>
            <th>删除课程</th>
        </tr>
        @{
    PIPOSKY2DbContext db = new PIPOSKY2DbContext();
    int ord = 0;
    foreach (var i in db.Courses)
    {
        ord++;
            <tr>
                <td>@ord</td>
                <td>@i.CourseName</td>
                <td>
                    <input type="checkbox" name="@i.CourseID" /></td>
            </tr>
    }
        }
    </table>
    <button type="submit" class="btn btn-default">确定</button>
}