@{
    ViewBag.Title = "课程";
}

@using PIPOSKY2.Models;
@model IEnumerable<Course>

<h2>课程</h2>
@{
    User tmp = Session["User"] as User;
    if ((tmp != null) && ((tmp.UserType == "admin") || (tmp.UserType == "editor")))
    {
    <p>
        @Html.ActionLink("添加课程", "Add", "Courses", new { @class = "btn btn-default" })
        @Html.ActionLink("删除课程", "Delete", "Courses", new { @class = "btn btn-default" })
    </p>
    }
}
<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>课程名称</th>
    </tr>
    @{
        int ord = 0;
        foreach (Course i in Model)
        {
            ord++;
        <tr>
            <td>@ord</td>
            <td>@Html.ActionLink(@i.CourseName, "Index", "Course", new { id = @i.CourseID }, null)</td>
        </tr>
        }
    }
</table>
