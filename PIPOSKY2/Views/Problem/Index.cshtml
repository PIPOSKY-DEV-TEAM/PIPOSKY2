@using PIPOSKY2.Models 
@model IEnumerable<Problem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("上传题目", "Upload", "Problem", new { @class = "btn btn-default" })
@Html.ActionLink("删除题目", "Delete", "Problem", new { @class = "btn btn-default" })
<p></p>

<table class="table">
    <tr>
        <th>题目ID</th>
        <th>题目名称</th>
        <th>存储路径</th>
        <th>上传用户</th>
        <th></th>
    </tr>
    @foreach (Problem i in Model)
    {
        if (i.Visible)
        {
            <tr>
                <td>@i.ProblemID</td>
                <td>@Html.ActionLink(@i.ProblemName, "Content", new { id = @i.ProblemID })</td>
                <td>@i.ProblemPath</td>
                <td>@i.Creator</td>
                <td>@Html.ActionLink("编辑", "Edit", new { id= @i.ProblemID})</td>
            </tr>
        }
    }
</table>
