@using PIPOSKY2.Models 
@model IEnumerable<Problem>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("上传题目", "Upload", "Problem")
@Html.ActionLink("修改题目", "Edit", "Problem")
@Html.ActionLink("删除题目", "Delete", "Problem")

<table class="table">
    <tr>
        <th>题目ID</th>
        <th>题目名称</th>
        <th>存储路径</th>
        <th>上传用户</th>
    </tr>
    @foreach (Problem i in Model)
    {
        <tr>
            <td>@i.ProblemID</td>
            <td>@i.ProblemName</td>
            <td>@i.ProblemPath</td>
            <td>@i.Creator</td>
        </tr>
    }
</table>
