@using PIPOSKY2.Models 
@model Problem

@{
    ViewBag.Title = "上传题目";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Upload","Problem",FormMethod.Post,new { enctype ="multipart/form-data"}))
{
    <label>上传文件</label>
    <input type="file" class="filestyle" name="File" accept="" required="required"/>
    <script type ="text/javascript">
        $(":file").filestyle({ icon:false, buttonBefore: true, buttonText: "浏览"});
    </script>
    <p style="color:red">@ViewBag.mention</p>;
    <p></p>
    
    <label>对所有用户可见</label>
    <input type="checkbox" name="visible" checked="@Model.Visible"/>
    <p></p>
    
    <input type="submit" value="提交" class="btn btn-default" />
}
