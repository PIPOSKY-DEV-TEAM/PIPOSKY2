<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")

    @Scripts.Render("~/Scripts/shCore.js")

    @Scripts.Render("~/Scripts/shBrushCpp.js")
    @Scripts.Render("~/Scripts/shBrushCSharp.js")
    @Scripts.Render("~/Scripts/shBrushJava.js")
    @Scripts.Render("~/Scripts/shBrushPlain.js")
    @Scripts.Render("~/Scripts/shBrushPython.js")

    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/shThemeDefault.css")
</head>
<body>
    @Scripts.Render("~/Scripts/jquery-1.7.1.js")
    @Scripts.Render("~/Scripts/bootstrap.js")
    @Scripts.Render("~/Scripts/bootstrap-filestyle.min.js")
    
    @RenderSection("scripts", required: false)
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("PIPOSKY2", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Course", "Index", "Courses")</li>
                    <li>@Html.ActionLink("Problem", "Index", "Problem")</li>
                    <li>@Html.ActionLink("Status", "Index", "Submit")</li>
                    @RenderSection("Navbar", required: false)
                </ul>
                <div style="float: right;">
                    <ul class="nav navbar-nav">
                        @{
                            if (Session["_UserName"] != null)
                            {
                            <li>@Html.ActionLink((string)Session["_UserName"], "info", "User")</li>
                            <li>@Html.ActionLink("Exit", "Exit", "User")</li>
                            }
                            else
                            {
                            <li>@Html.ActionLink("Login", "Login", "User")</li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>
    <script type="text/javascript">SyntaxHighlighter.all();</script>
</body>
</html>
